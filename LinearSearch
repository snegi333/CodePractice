public class LinearSearch {

    public static int findTargetValue(int[] arr, int target) {
        int index = 0;
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target)
                index = i;
        }
        return index;
    }

    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5, 6};
        int output = findTargetValue(arr, 1);
        System.out.println(output);
    }
}
